			</StaticWindow>
			<Settings tooltip="Rogue"
				visible="true"/>
		</UseControl>
		<UseControl	type="StaticWindow">
			<StaticWindow pictureMode="true" textData="ClassGraphic">
				<Rect x="65" y="5" width="65" height="81"/>
